{
  "manifest_version": 3,
  "name": "Smart Reader",
  "id": "smart-reader-tts",
  "version": "1.0",
  "description": "Preprocess HTML content that contains Math equations using Gemini AI and listen with a local TTS",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "smart_reader_tts@yourdomain.com"
    }
  }
}
